<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signUp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="369dp"
            android:layout_height="711dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintVertical_bias="0.0">
        <TextView
                android:text="ลงทะเบียน"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/textView3" android:textSize="18sp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="119dp" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/imageView3"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp">
            <TextView
                    android:text="ชื่อ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/nameTxt" android:layout_weight="1" android:hint="Name"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="84dp">
            <TextView
                    android:text="อายุ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/AgeTxt"
                    android:layout_weight="1"/>
            <TextView
                    android:text="เพศ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="1"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spinner" android:layout_weight="1"/>
        </LinearLayout>
        <TextView
                android:text="รหัสผ่าน"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/passtxt1"/>
        <TextView
                android:text="ยืนยันรหัสผ่าน"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/passTxt2"/>
        <Button
                android:text="ยอมรับ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acceptBtn"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>